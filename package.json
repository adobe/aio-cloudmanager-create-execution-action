{
  "name": "aio-cloudmanager-create-execution-action",
  "version": "1.0.5",
  "description": "",
  "private": true,
  "scripts": {
    "posttest": "npm run lint",
    "lint": "eslint src/**.js tools/**.js",
    "package": "ncc build src/index.js -o dist/",
    "generate-docs": "node ./tools/update-readme.js",
    "postversion": "npm run generate-docs",
    "test": "npm run unit-tests",
    "unit-tests": "jest --ci",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "semantic-release-dry-run": "semantic-release --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/aio-cloudmanager-create-execution-action.git"
  },
  "author": "Adobe Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@adobe/aio-lib-cloudmanager": "1.12.1",
    "@adobe/aio-lib-ims": "5.0.1",
    "halfred": "2.0.0",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-aio-lib-config": "1.3.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@vercel/ncc": "0.31.1",
    "eslint": "7.32.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jsdoc": "25.4.3",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "5.1.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-junit": "13.0.0",
    "replace-in-file": "6.3.2",
    "semantic-release": "17.4.7"
  },
  "engines": {
    "node": ">=12 <13"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "clearMocks": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "README.md",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json",
            "dist/index.js"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
